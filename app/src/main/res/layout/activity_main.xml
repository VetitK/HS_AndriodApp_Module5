<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black"
    android:orientation="vertical">

        <!-- Cover Image -->


        <!-- Overlay Text and Location Pin Icon -->

        <!-- Avatar, Name, Icons, Divider, and Text Grid -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">
                <ImageView
                    android:id="@+id/coverImage"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="3"
                    android:scaleType="centerCrop"
                    android:src="@drawable/test" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/locationPinIcon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"


                            android:src="@drawable/baseline_place_24" />

                        <TextView
                            android:id="@+id/bottomRightText"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/ImageDescribe"
                            android:textColor="#FFFFFF" />
                </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:padding="16dp"
            >

                <!-- Circle Avatar Image -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/avatarImage"
                            android:layout_width="24dp"
                            android:layout_height="23dp"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/baseline_account_circle_24" />

                        <!-- Name TextView -->
                        <TextView
                            android:id="@+id/nameTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:gravity="center_vertical"
                            android:text="John Doe"
                            android:textColor="@android:color/white"
                            android:textFontWeight="700"
                            android:textSize="16sp" />

                </LinearLayout>


                <!-- Icons (Adjust the icons and their functionality as needed) -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="horizontal">

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/baseline_download_24" />

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/baseline_favorite_border_24" />

                        <ImageButton
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="16dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/baseline_bookmark_border_24" />

                </LinearLayout>
        </LinearLayout>
                <!-- Divider -->

        <!-- Text Grid -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#1E1F20" />

        <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                        android:padding="16dp"
                >

                        <!-- Column 1 -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera"
                            android:textFontWeight="700"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="NIKON D6"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_columnWeight="1"
                    android:layout_marginBottom="10dp">

                        <TextView
                            android:textFontWeight="700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Focal Length"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="24mm"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                        <TextView
                            android:textFontWeight="700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ISO"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="200"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:orientation="vertical">

                        <TextView
                            android:textFontWeight="700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aperture"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="f/7.0"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                        <TextView
                            android:textFontWeight="700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Shutter Speed"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1/640s"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                        <TextView
                            android:textFontWeight="700"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dimensions"
                            android:textColor="@android:color/white" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4000 x 6000"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>
                </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#1E1F20" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:padding="16dp"
            android:rowCount="1"
            >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Views"
                            android:textColor="@android:color/white"
                            android:textFontWeight="700"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="2.2B"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Downloads"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textFontWeight="700" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="15.3M"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Likes"
                            android:textColor="@android:color/white"
                            android:textFontWeight="700"
                            android:textAlignment="center"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="9"
                            android:textColor="@android:color/darker_gray" />
                </LinearLayout>
        </GridLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:background="#1E1F20" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:background="@drawable/rounded_btn"
                    android:text="Click me"
                    android:textColor="@color/white"
                    android:layout_marginEnd="16dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="Spain"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_btn" />

        </LinearLayout>


</LinearLayout>
